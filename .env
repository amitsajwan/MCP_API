# MCP Server Configuration
MCP_HOST=127.0.0.1
MCP_PORT=8000
MCP_SERVER_ENDPOINT=http://127.0.0.1:8000

# Chatbot Application Configuration
CHATBOT_HOST=0.0.0.0
CHATBOT_PORT=9099


# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# Mock API Server Configuration
MOCK_API_HOST=127.0.0.1
MOCK_API_PORT=9001
MOCK_API_BASE_URL=http://127.0.0.1:9001

# Frontend Development Configuration
VITE_PORT=9517
FRONTEND_DEV_URL=http://localhost:9517

# OpenAPI Configuration
OPENAPI_DIR=./openapi_specs
MOCK_ALL=false
AUTO_MOCK_FALLBACK=false

# Azure OpenAI Configuration (for LLM planning)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure AD Token Provider Configuration
# Set to true to use Azure AD token provider instead of API key
USE_AZURE_AD_TOKEN_PROVIDER=false
# Scope for Azure AD token (default for Cognitive Services)
AZURE_AD_TOKEN_SCOPE=https://cognitiveservices.azure.com/.default

# Legacy API Key Configuration (only used if USE_AZURE_AD_TOKEN_PROVIDER=false)
AZURE_OPENAI_API_KEY=your-api-key-here

# Authentication Configuration
DEFAULT_LOGIN_URL=http://api.company.com/login
DEFAULT_USERNAME=
DEFAULT_PASSWORD=
DEFAULT_API_KEY_NAME=
DEFAULT_API_KEY_VALUE=

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Development Configuration
ENABLE_CORS=true
ENABLE_ACCESS_LOGGING=true
MAX_TOOL_EXECUTIONS=5
REQUEST_TIMEOUT=30
