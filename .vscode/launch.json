{
    "configurations": [
        {
            "name": "Debug Chatbot App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/chatbot_app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [],
            "justMyCode": false,
            "stopOnEntry": false
        },
