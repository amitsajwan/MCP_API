# Simplified FastMCP System Configuration
# Copy this file to .env and fill in your values

# Authentication Credentials
API_USERNAME=your_username
API_PASSWORD=your_password

# API Key Authentication (optional)
API_KEY_NAME=X-API-Key
API_KEY_VALUE=your_api_key_here

# API Endpoints
LOGIN_URL=https://api.company.com/auth/login
FORCE_BASE_URL=https://api.company.com

# Per-API Base URL Overrides (optional)
# FORCE_BASE_URL_CASH_API=https://cash-api.company.com
# FORCE_BASE_URL_SECURITIES_API=https://securities-api.company.com
# FORCE_BASE_URL_MAILBOX_API=https://mailbox-api.company.com
# FORCE_BASE_URL_CLS_API=https://cls-api.company.com

# Logging Level
LOG_LEVEL=INFO